<header>
    
    
    <!-- Header Start -->
    <div class="header-area maincolor">
        <div class="main-header header-sticky">
            <div class="container-fluid">
                <div class="menu-wrapper d-flex align-items-center justify-content-between">
                    <!-- Logo -->
                    <div class="logo">
                        <h4 class="trendView ml-3">trendView</h4>
                    </div>
    
                    <!-- Main-menu -->
                    <div class="main-menu d-none d-lg-block mt-3">
                        <nav>
                            <ul id="navigation" class="d-flex align-items-center">  
                                <li><a href="/">Home</a></li>
                                <li><a href="/shirt">Shop</a></li>
                                <li><a href="/about">About</a></li>
                                <li><a href="/contact">Contact</a></li>
                            </ul>
                            <!-- <form class="d-flex me-5 d-md-none d-s-flex">
                                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-primary" type="submit">Search</button>
                            </form> -->
                        </nav>
                    </div>
    
                    <!-- Header Right: Search Bar, Wishlist Icon, User Icon, Logout Button -->
                    <div class="d-flex align-items-center">
                        <div class="header-right d-none d-lg-flex align-items-center">
                            <!-- Search Form -->
                            <!-- <form class="d-flex me-5 ">
                                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                <button class=" searchBtn" type="submit">Search</button>
                            </form> -->
    
                            
                            <a href="/wishlist" class="position-relative me-4" style="transition: all 0.3s ease;">
                                <img src="/public/icons/heart.png" alt="Wishlist" style="height: 20px;">
                                
                                <% if (wishlistCount > 0) { %> 
                                    <span class="badge translate-middle rounded-circle bg-danger" 
                                          style="font-size: 10px; padding: 0.2em 0.4em; width: 19px; height: 19px; line-height: 16px; position: absolute; top: 0px; left: 20px; color: white;">
                                        <%= wishlistCount %>
                                    </span>
                                <% } %>
                            </a>
                            
                            <a href="/cart-items" class="    me-3">
                                <img src="/public/icons/shopping-cart.png" alt="" style="height: 20px;">
                                <% if (cartCount > 0) { %> 
                                    <span class="badge   translate-middle rounded-circle bg-danger"  style="font-size: 10px; padding: 0.2em 0.4em; width: 19px; height: 19px; line-height: 16px; position: absolute; top: 58px; right: 131px; color: white;">
                                        <%= cartCount %>
                                    </span>
                                    <% } %>
                            </a>
                            

    
                            <!-- User Icon -->
                            <a href="/profile" class="    me-3">
                                <img src="/public/icons/user.png" alt="" style="height: 20px;">
                            </a>

    
                            <!-- Logout Button -->
                            <% if(!user) {%>
                                <div class="logIn me-2" type="">
                                    <a href="/login" class="custom-link logIn " >Login</a>
                                  </div>
                                  
                                <% }else{ %>
                                    <div class="logIn me-2" type=""><a href="/logout" class="logIn custom-link me-2" style="text-decoration: none;">Logout</a> </div>
                            <% } %>
                        </div>
    
                        <!-- Mobile Right-Side Content -->
                        <div class="mobile-right d-flex d-lg-none align-items-center align-items-center mr-3 mb-4">
                            <a href="/wishlist" class="    me-3">
                                <img src="/public/icons/heart.png" alt="" style="height: 20px;">
                            </a>
                            <a href="/cart-items" class="    me-3">
                                <img src="/public/icons/shopping-cart.png" alt="" style="height: 20px;">
                            </a>
    
                            <!-- User Icon -->
                            <a href="/profile" class="    me-3">
                                <img src="/public/icons/user.png" alt="" style="height: 20px;">
                            </a>
                            <% if(!user ) {%>
                                <div class="logIn me-2" type="">
                                    <a href="/login" class="custom-link logIn " >Login</a>
                                  </div>
                                <% }else{ %>
                                    <div class="logIn me-2" type=""><a href="/logout" class="logIn custom-link me-2" style="text-decoration: none;">Logout</a> </div>
                            <% } %>
                        </div>
    
                        <!-- Mobile Menu -->
                        <div class="d-lg-none ms-3">
                            <div class="mobile_menu"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    

    <!-- Header End -->
</header>
