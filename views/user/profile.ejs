/* wallet  */
body {
      background-color: white;
      color: black;
      font-family: 'Roboto', sans-serif;
    }
    .wallet-card {
      background-color: white;
      border-radius: 15px;
      padding: 30px;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }
    .wallet-card .balance {
      font-size: 2rem;
      font-weight: bold;
      margin-bottom: 10px;
    }
    .wallet-card .available {
      color: #9ea7b3;
      font-size: 1.2rem;
      margin-bottom: 30px;
    }
    .btn-primary {
      background-color: #b38b40;
      border: none;
      border-radius: 20px;
      padding: 10px 20px;
    }
    .btn-primary:hover {
      background-color: #a77d37;
    }
    .form-control {
      border-radius: 0;
      border-color: #b38b40;
    }
    .transaction-card {
      background-color: #f8f9fa;
      border-radius: 10px;
      padding: 15px;
      margin-bottom: 15px;
    }
    .transaction-card h6, .transaction-card p {
      margin: 0;
    }
    .icon {
      width: 40px;
      height: 40px;
      background-color: #eee;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      color: #6c757d;
    }
    .text-muted {
      color: #6c757d !important;
    }

</style>

<section class="my-5">
    <div class="container">
        <div class="main-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQtbEsykx-0fhTred6UwHDYtMFd2UgTJCG4gaklT1dx4suRO4_n5LJr4Gg28kquSX5fpNo&usqp=CAU" alt="Admin"
                                    class="rounded-circle p-1 bg-warning" width="110">
                                <div class="mt-3">
                                    <h4><%= user.firstName %></h4>
                                    <p class="text-secondary mb-1"><%= user.email %></p>
                                    <p class="text-muted font-size-sm"><%= user.phone %></p>
                                </div>
                            </div>
                            <div class="list-group list-group-flush text-center mt-4">
                                <a href="#" class="list-group-item list-group-item-action border-0 " onclick="showProfileDetails()">
                                    Profile 
                                </a>
                                <a href="#" class="list-group-item list-group-item-action border-0" onclick="showOrderDetails()">Wallet</a>
                                
                                <a href="#" class="list-group-item list-group-item-action border-0 active"
                                    onclick="showAddressBook()">
                                    Address
                                </a>
                                <a href="#" class="list-group-item list-group-item-action border-0">Logout</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div  id="orderDetails" class="order_card">
                     
                    
                    <!-- Right Side Wallet Info -->
                    <div class="col-md-6" style="max-width: 1800px;">
                        <div class="wallet-card">
                        <h4>My Wallet</h4>
                        <p class="balance"> â‚¹
                            <% if (wallet.length > 0) { %>
                                <%= wallet[0].balance %>
                            <% } else { %>
                                0
                            <% } %></p>
                        <p class="available">Available Balance</p>
                        <button class="btn btn-primary mb-4" data-bs-toggle="modal" data-bs-target="#addFundsModal">Add Funds</button>
                
                        <!-- Recent Transactions -->
                        <h5>Returned List</h5>
                        <% orders.forEach((element)=>{ %>
                            <% element.products.forEach((item)=>{ %>
                        <div class="transaction-card d-flex justify-content-between align-items-center">
                            <!-- index number  -->
                            <div>
                            <h6><%= item.name%></h6>
                            <p class="text-muted"><%= element.orderDate.toLocaleDateString('en-GB') %></p>
                            </div>
                            <p class="text-success">+ <%= item.price %></p>
                        </div>
                         <% }) %>
                         <% }) %>
                        </div>
                    </div>
                </div>
                    
                     <div id="profileDetails" class="" style="display: none;">
                        <div class="col-md-6" style="max-width: 1800px;">
                            <div class="wallet-card p-4 border rounded mb-4">
                                <h4>Profile Information</h4>
                                <p class="mb-1"><strong>Name:</strong> <%= user.firstName %></p>
                                <p class="mb-1"><strong>Email Address:</strong> <%= user.email %></p>
                                <p class="mb-1"><strong>Contact:</strong> <%= user.phone %></p>
                            </div>
                        </div>
                        
                </div>
                
                <div id="addressBook" class="" style="display: none;">
                    <div class="card-body">
                        <a href="/address">
                            <button type="submit" class="btn btn-dark mb-2">Add Address</button>
                        </a>
                        
                        <div id="addressList ">
                            <div class="row mb-4">
                                <div class="col-12 wallet-card p-4 border rounded mb-4">
                                
                                    <div class=" ">
                                        <h4>My Addresses</h4>
                                        <% if (info && info.length > 0) { %>
                                            <% info.forEach((element) => { %>
                                                <% if (element.address && element.address.length > 0) { %>
                                                    <% element.address.forEach((addr) => { %>
                                                        <div class="address-box p-3 border rounded mb-3">
                                                            <p class="mb-1"><strong>Name:</strong> <%= addr.name %></p>
                                                            <div class="d-flex justify-content-start">
                                                                <p class="mb-1"><%= addr.houseName %>,&nbsp;</p>
                                                                <p class="mb-1"><%= addr.city %></p>
                                                            </div>
                                                            <div class="d-flex justify-content-start">
                                                                <p class="mb-1"><%= addr.district %>,&nbsp;</p>
                                                                <p class="mb-1"><%= addr.state %>,&nbsp;</p>
                                                                <p class="mb-1"><%= addr.pin %></p>
                                                            </div>
                                                            <p class="mb-1"><strong>Phone:</strong> <%= addr.phone %></p>
                                                            <div class="d-flex justify-content-end mt-2">
                                                                <a href="/editAddress/<%= addr._id %>">
                                                                    <button type="button" class="btn btn-warning btn-sm me-2">Edit</button>
                                                                </a>
                                                                <a href="/deleteAddress/<%= addr._id %>">
                                                                    <button type="button" class="btn btn-danger btn-sm">Delete</button>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    <% }) %>
                                                <% } else { %>
                                                    <p>No address found.</p>
                                                <% } %>
                                            <% }) %>
                                        <% } else { %>
                                            <p>No address found.</p>
                                        <% } %>
                                    </div>

                                </div>
                            </div>  
                        </div>
                    </div>
                </div>
                
                <div id="addAddressModal" class="modal">
<div class="modal-content">
    <span class="close" onclick="closeAddAddressModal()">&times;</span>
