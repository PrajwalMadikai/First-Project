 <script>
function sortProducts() {
    const sortOption = document.getElementById('sorting-options').value;  
    const categories = Array.from(document.querySelectorAll('input[type="checkbox"][id^="category"]:checked'))
        .map(checkbox => checkbox.value).join(','); // Get selected categories
    const brands = Array.from(document.querySelectorAll('input[type="checkbox"][id^="brand"]:checked'))
        .map(checkbox => checkbox.value).join(','); // Get selected brands
    window.location.href = `/shirt?sort=${sortOption}&categories=${categories}&brands=${brands}`;
}

function handleSearch() {
    const query = document.getElementById('searchQuery').value;
    const sortOption = document.getElementById('sorting-options').value;
    const categories = Array.from(document.querySelectorAll('input[type="checkbox"][id^="category"]:checked'))
        .map(checkbox => checkbox.value).join(','); // Get selected categories
    const brands = Array.from(document.querySelectorAll('input[type="checkbox"][id^="brand"]:checked'))
        .map(checkbox => checkbox.value).join(','); // Get selected brands
    window.location.href = `/shirt?sort=${sortOption}&categories=${categories}&brands=${brands}&query=${query}`;
    return false;
}

 

 

 </script>

