                confirmButtonText: 'OK'
            });
        }
    } catch (error) {
        // Handle any unexpected errors
        console.error('Error:', error);
        Swal.fire({
            title: 'Error!',
            text: 'Something went wrong. Please try again later.',
            icon: 'error',
            confirmButtonText: 'OK'
        });
    }
}




        
