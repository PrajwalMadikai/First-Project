<%- include("../partials/homeHeader") %>
<%- include("../partials/mainHeader") %>
    <style>
.order-card {
    transition: all 0.3s ease-in-out;
    padding: 20px;
    background-color: #f9f9f9;
    transition: box-shadow 0.3s ease-in-out, transform 0.3s ease-in-out;
}

.order-card:hover {
    box-shadow: 0 8px 20px rgba(32, 1, 17, 0.2);
    transform: scale(1.02);
    background-color: #eaeaea;
}

/* Flexbox styling for horizontal alignment */
.d-flex {
    display: flex;
}

.justify-content-between {
    justify-content: space-between;
}

.align-items-center {
    align-items: center;
}

.flex-item {
    flex: 1;
    padding: 0 10px;
    text-align: center;
}
.pagination .page-item .page-link {
    background-color: black; /* Background color */
    color: white; /* Text color */
    border: none; /* No border */
    
   
}

.pagination .page-item .page-link:hover {
    background-color: #444; /* Darker shade on hover */
    color: white; /* Keep text white on hover */
}
.pagination .page-item .page-link {
    height: 38px;  
    display: flex;  
    align-items: center;  
    justify-content: center; 
}
.pagination .page-item .page-link {
    display: flex;
    align-items: center; 
    justify-content: center;  
    padding: 0.5rem 1rem;  
}


    </style>
</head>
 
<div class="container order-list-container">
    <h1 class="mb-4 text-center">My Orders</h1>

    <!-- Header Row with Titles -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between text-center">
                        <div class="flex-item">
                            <h5 class="card-title mb-0">Order ID</h5>
                        </div>
                        <div class="flex-item">
                            <h5 class="card-title mb-0">Products</h5>
                        </div>
                        <div class="flex-item">
                            <h5 class="card-title mb-0">Total Price</h5>
                        </div>
                        <div class="flex-item">
                            <h5 class="card-title mb-0">Payment Method</h5>
                        </div>
                        <div class="flex-item">
                            <h5 class="card-title mb-0">Details</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Order Details Rows -->
    <% orders.forEach(order => { %>
        
            <div class="row mt-2">
                <div class="col-md-12">
                    <div class="card shadow-sm order-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between text-center align-items-center">
                                <div class="flex-item">
                                    <p class="mb-0"><%= order.orderNumber %></p>  
                                </div>
                                <div class="flex-item">
                                    <% order.products.forEach((element)=>{ %>
                                    <p class="mb-0"><%=element.name %>,</p> 
                                    <% }) %> 
                                </div>
                                <div class="flex-item">
                                    <p class="mb-0">â‚¹<%= order.totalAmount %></p>  
                                </div>
                                <div class="flex-item">
                                    <p class="mb-0"><%= order.paymentOption %></p>  
                                </div>
                                
                                <div class="flex-item">
                                    <a href="/orderDetail/<%= order._id %>">
                                        <p class="mb-0 text-success">View</p>
                                    </a>  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>

    <div class="pagination d-flex justify-content-center mt-4">
        <ul class="pagination">
            <% if (currentPage > 1) { %>
                <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage - 1 %>" aria-label="Previous" class="btn btn-dark">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>" class="btn btn-dark">
                        <%= i %>
                    </a>
                </li>
            <% } %>

            <% if (currentPage < totalPages) { %>
                <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage + 1 %>" aria-label="Next" class="btn btn-dark">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            <% } %>
        </ul>
    </div>
</div>

<%- include("../partials/homeFooter") %>