     <script>
async function addToCart(productId) {
    
    const quantity =1;

    try {
        let response = await fetch(`/cart/${productId}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ quantity: quantity })
        });

        

        let res = await response.json();

        if (res.success) {
            Swal.fire({
                text: "!! Product added to cart", 
                showConfirmButton: false,
                timer: 3000, 
                backdrop: false,
                customClass: {
                    popup: 'swal2-popup-custom', 
                },
                position: 'bottom-end', // Set position to bottom right
                toast: true, // Make it a toast notification
            }).then(()=>{
                window.location.reload()
            })

        } else if (res.stock === true) {
            Swal.fire({
                title: 'Out of Stock!',
                text: 'The item you selected is currently out of stock.',
                icon: 'warning',
                confirmButtonText: 'OK',
                position: 'top',
                toast: true,
                showConfirmButton: false,
                timer: 2000,
                timerProgressBar: true
            });
        } else {
            Swal.fire({
                title: 'Warning!',
                text: 'Something went wrong.',
                icon: 'warning',
                confirmButtonText: 'OK',
                position: 'top',
                toast: true,
                showConfirmButton: false,
                timer: 2000,
                timerProgressBar: true
            });
        }
    } catch (error) {
        // Log the error to the console
        console.error('Error adding to cart:', error);

        // Show an error message to the user
        Swal.fire({
            title: 'Error!',
            text: 'An unexpected error occurred. Please try again later.',
            icon: 'error',
            confirmButtonText: 'OK',
            position: 'top',
            toast: true,
            showConfirmButton: false,
            timer: 2000,
            timerProgressBar: true
        });
    }
}


async function addToWhistlist(productId) {

    let response = await fetch(`/wishlist/${productId}`, {
        method: 'POST',
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ productId })
    });

    if (response.ok) {
        let data = await response.json();
        if (data.newItem === true) {
            Swal.fire({
                text: "!! Product added to Wishlist", 
                showConfirmButton: false,
                timer: 3000, 
                backdrop: false,
                customClass: {
                    popup: 'swal2-popup-custom', 
                },
                position: 'bottom-end', // Set position to bottom right
                toast: true, // Make it a toast notification
            }).then(()=>{
                window.location.reload()
            })
        } else {
            Swal.fire({
                icon: 'info',
                title: 'Already in Wishlist',
                text: 'This product is already in your wishlist!',
                showConfirmButton: false,
                timer: 1500
            });
        }
    } else {
        // SweetAlert for error in case the response fails
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Something went wrong!',
        });
    }
    }
     </script>
