<%- include("../partials/homeHeader") %>
<%- include("../partials/mainHeader") %>
<div class="container">
    <div class="row">
        <!-- Cart Items Section -->
        <div class="col-lg-8">
            
            <% wishlist.forEach((item, index) => { %>
                <div class="card mb-3" id="cart-item-<%= item._id %>">
                    <div class="row no-gutters">
                        <!-- Product Image -->
                        <div class="col-md-3 d-flex align-items-center justify-content-center">
                            <img src="/public/product_img/<%= item.productId.image.image1 %>" alt="Product Image" class="img-fluid" style="width: 80px; height: 80px; object-fit: cover;">
                        </div>
                        <!-- Product Details -->
                        <div class="col-md-6">
                            <div class="card-body">
                                <h5 class="card-title"><%= item.product_name %></h5>
                                <p class="card-text">Price: â‚¹<span id="itemPrice"><%= item.price %></span></p>
                            </div>
                        </div>
            
                        <!-- Add to Cart Button -->
                        <div class="col-md-3 d-flex flex-column align-items-center justify-content-center">
                            <button class="btn btn-dark" onclick="addToCart('<%= item.productId._id %>' )">ADD TO CART</button>
                        </div>
                    </div>
                </div>
            <% }); %>
            
            
           
        </div>
</div>
<script>
function addToCart(productId) {
  let size='S'
    fetch(`/cart/${productId}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ quantity:1,size })
    })
    .then(res => {
        if (res.ok) {
            Swal.fire({
                title: 'Success!',
                text: 'The item has been added to your cart and removed from the wishlist.',
                icon: 'success',
                confirmButtonText: 'OK',
                position: 'top',
                toast: true,
                showConfirmButton: false,
                timer: 2000,
                timerProgressBar: true
            }).then(()=>{
                window.location.reload()
            })
        } else {
            console.log("Something went wrong");
        }
    })
    .catch(err => {
        console.error('Error:', err);
    });
}

