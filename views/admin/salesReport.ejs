<%- include('../partials/adminHeader') %>

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Sidebar Section -->
        <nav class="col-md-2 sidebar sidebar-offcanvas" id="sidebar">
            <div class="user-profile text-center py-4">
                <div class="user-name adminName">Prajwal</div>
                <div class="user-designation">Admin</div>
            </div>
            <%- include('../partials/adminSidebar') %>
        </nav>

        <!-- Main Content Section -->
        <div class="col-md-10">
            <!-- Filter Section -->
            <div class="row mb-3">
                <div class="col-md-3">
                    <select class="form-select select-style" id="monthSelect">
                        <option value="" disabled selected>Select Month</option>
                        <option value="january">January</option>
                        <option value="february">February</option>
                        <option value="march">March</option>
                        <!-- Add more months -->
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select select-style" id="weekSelect">
                        <option value="" disabled selected>Select Week</option>
                        <option value="week1">Week 1</option>
                        <option value="week2">Week 2</option>
                        <option value="week3">Week 3</option>
                        <!-- Add more weeks -->
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select select-style" id="dailySelect">
                        <option value="" disabled selected>Select Day</option>
                        <option value="day1">Day 1</option>
                        <option value="day2">Day 2</option>
                        <option value="day3">Day 3</option>
                        <!-- Add more days -->
                    </select>
                </div>
                <div class="col-md-3 text-end">
                    <button class="btn btn-success" id="generateReportBtn">Generate Report</button>
                </div>
            </div>

            <!-- Order Count Section -->
            <div class="row text-center mb-4">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Monthly Orders</h5>
                            <p class="card-text" id="monthlyOrdersCount">0</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Weekly Orders</h5>
                            <p class="card-text" id="weeklyOrdersCount">0</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Daily Orders</h5>
                            <p class="card-text" id="dailyOrdersCount">0</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Orders Table Section -->
            <div class="row">
                <div class="col-12">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Order Number</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">Payment Method</th>
                                <th scope="col">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% order.forEach((element)=>{ %>
                                <% element.products.forEach((item)=>{ %>
                            <tr>
                                <td>#<%= element.orderNumber %></td>
                                <td><%= item.name %></td>
                                <td><%= element.paymentOption %></td>
                                <td><%= item.status %></td>
                            </tr>
                            <% }) %>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/adminFooter') %>
