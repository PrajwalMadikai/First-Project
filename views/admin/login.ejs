        .login-image {
            max-width: 100%;
            height: auto;
        }

        /* .form-control {
            border-radius: 0;
            border: none;
            border-bottom: 2px solid #ccc;
        } */

        .form-control:focus {
            box-shadow: none;
            /* border-color: #EBD96B; */
        }

        .login-btn {
            width: 100%;
            padding: 10px;
            /* border-radius: 0; */
